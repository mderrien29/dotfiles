  format = " â™ª: %volume " 
  #format = " â™ª: %volume (%devicename) " 
format_muted = "â™ª: muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
# termsyn font
# format = "Ã€ %volume "
}

cpu_usage {
  format = " CPU: %usage "
}

memory {
  format = " RAM: %percentage_used (%used) "
}

battery 0 {
  format = "%status %percentage %remaining %emptytime"
    format_down = " No battery "
    status_chr = "âš¡ CHR"
    status_bat = "ðŸ”‹ BAT"
    status_unk = "? UNK"
    status_full = "â˜» FULL"
