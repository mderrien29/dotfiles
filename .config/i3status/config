general {
  colors = true
    color_good = "#BBBBBB"
    color_bad = "#CC1616"
    color_degraded = "#55858E"
    interval = 1
}

order += "disk /"
order += "cpu_usage"
order += "memory"
order += "wireless _first_"
order += "ethernet _first_"
#order += "volume master"
#order += "battery 0"
#order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
  format_up = " E: %ip "
    format_down = "E: down"
}

battery all {
  format = "%status %percentage %remaining"
}

tztime local {
  format = " %H:%M:%S %Y-%m-%d "
}

